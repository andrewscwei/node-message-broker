{
  "name": "@sybl/message-broker",
  "version": "0.32.0",
  "description": "Node.js message broker that helps managing AMQP connections and sending/receiving messages",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "prepare": "npm run build",
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "test": "DEBUG=message-broker* mocha --timeout 20000 --reporter spec --full-trace --colors --recursive --exit $([ -z \"$npm_config_path\" ] && echo build/**/*.spec.js || echo $npm_config_path)",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "ship:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sybl/node-message-broker.git"
  },
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sybl/node-message-broker/issues"
  },
  "homepage": "https://github.com/sybl/node-message-broker#readme",
  "devDependencies": {
    "@types/bson": "^4.0.0",
    "@types/debug": "^4.1.4",
    "@types/lodash": "^4.14.130",
    "@types/mocha": "^5.2.6",
    "@types/parse-json": "^4.0.0",
    "@types/uuid": "^3.4.4",
    "mocha": "^6.1.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@types/amqplib": "^0.5.11",
    "@types/serialize-error": "^4.0.1",
    "amqplib": "^0.5.3",
    "bson": "^4.0.2",
    "debug": "^4.1.1",
    "lodash": "^4.17.11",
    "parse-json": "^4.0.0",
    "serialize-error": "^4.1.0",
    "uuid": "^3.3.2"
  },
  "types": "build/index.d.ts"
}
