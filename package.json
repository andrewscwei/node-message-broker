{
  "name": "@0xghozt/message-broker",
  "version": "0.51.0",
  "description": "Node.js message broker that helps managing AMQP connections and sending/receiving messages",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha -n experimental-specifier-resolution=node --timeout 30000 -b -c --extension spec.js --recursive --exit \"build/$npm_config_files\"",
    "test:ts": "concurrently --kill-others -n mq,module --hide mq -c white,cyan \"docker run --rm -p 5672:5672 rabbitmq:3.9.25\" \"cross-env DEBUG=message-broker* mocha -n experimental-specifier-resolution=node -n loader=ts-node/esm -r ts-node/register --timeout 30000 -b -c --extension spec.ts --recursive --exit \"src/$npm_config_files\"\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "ship:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/0xGHOZT/node-message-broker.git"
  },
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0xGHOZT/node-message-broker/issues"
  },
  "homepage": "https://github.com/0xGHOZT/node-message-broker#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.190",
    "@types/mocha": "^10.0.0",
    "@types/parse-json": "^4.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@andrewscwei/super-error": "^2.3.0",
    "@types/amqplib": "^0.10.0",
    "amqplib": "^0.10.3",
    "bson": "^4.7.0",
    "debug": "^4.3.4",
    "lodash": "^4.17.21",
    "parse-json": "^6.0.2",
    "uuid": "^9.0.0"
  }
}