{
  "name": "@sybl/message-broker",
  "version": "0.48.0",
  "description": "Node.js message broker that helps managing AMQP connections and sending/receiving messages",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha --timeout 30000 --reporter spec --full-trace --colors --extension spec.js --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"build\" || echo \"build/$npm_config_files\")",
    "test:ts": "cross-env DEBUG=message-broker* mocha -r ts-node/register --timeout 30000 --reporter spec --full-trace --colors --extension spec.ts --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"src\" || echo \"src/$npm_config_files\")",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "mq": "docker run --name node-message-broker-mq -d --rm -p 5672:5672 rabbitmq:3.9.12-management",
    "mq:stop": "docker stop node-message-broker-mq",
    "ship:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sybl/node-message-broker.git"
  },
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sybl/node-message-broker/issues"
  },
  "homepage": "https://github.com/sybl/node-message-broker#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@types/parse-json": "^4.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "mocha": "^9.1.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@andrewscwei/super-error": "^1.4.0",
    "@types/amqplib": "^0.8.2",
    "amqplib": "^0.8.0",
    "bson": "^4.6.1",
    "debug": "^4.3.3",
    "lodash": "^4.17.21",
    "parse-json": "^5.2.0",
    "uuid": "^8.3.2"
  }
}
