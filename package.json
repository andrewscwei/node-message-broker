{
  "name": "@sybl/message-broker",
  "version": "0.40.0",
  "description": "Node.js message broker that helps managing AMQP connections and sending/receiving messages",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "test": "DEBUG=message-broker* mocha --timeout 20000 --reporter spec --full-trace --colors --recursive --exit $([ -z \"$npm_config_path\" ] && echo build/**/*.spec.js || echo $npm_config_path)",
    "test:ts": "DEBUG=message-broker* mocha -r ts-node/register --timeout 20000 --reporter spec --full-trace --colors --recursive --exit $([ -z \"$npm_config_path\" ] && echo src/**/*.spec.ts || echo $npm_config_path)",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "mq": "docker run --name node-message-broker-mq -d --rm -p 5672:5672 rabbitmq:3.7.8-management",
    "mq:stop": "docker stop node-message-broker-mq",
    "ship:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sybl/node-message-broker.git"
  },
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sybl/node-message-broker/issues"
  },
  "homepage": "https://github.com/sybl/node-message-broker#readme",
  "devDependencies": {
    "@types/bson": "^4.0.2",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^7.0.2",
    "@types/parse-json": "^4.0.0",
    "@types/uuid": "^7.0.3",
    "mocha": "^7.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/serialize-error": "^4.0.1",
    "amqplib": "^0.5.5",
    "bson": "^4.0.4",
    "debug": "^4.1.1",
    "lodash": "^4.17.15",
    "parse-json": "^5.0.0",
    "serialize-error": "^7.0.1",
    "uuid": "^8.0.0"
  },
  "types": "build/index.d.ts"
}
